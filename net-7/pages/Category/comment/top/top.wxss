.topl {
    width: 100%;
    height: 88rpx;
    border-bottom: 1px solid #5555;
}

.banxin {
    width: 100%;
    height: 70rpx;
    margin: 9rpx auto;
    margin-top: 14rpx;
    display: flex;
    align-items: center;
}

.imgbox {
    width: 10%;
    height: 100%;
}

.imgbox>image {
    width: 90%;
    height: 90%;
}

.inputbox {
    width: 80%;
    height: 100%;
    margin-left: 4rpx;
    position: relative;
}

.input {
    width: 100%;
    height: 90%;
    margin-top: 4rpx;
    border-radius: 24rpx;
    border: 1px solid #ccc;
    font-size: 24rpx;
    padding-left: 16rpx;
}

.inputbox .nbimg {
    height: 40rpx;
    width: 40rpx;
    position: absolute;
    right: 10rpx;
    top: 14rpx;
}