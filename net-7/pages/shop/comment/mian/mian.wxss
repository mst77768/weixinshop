/* pages/shop/comment/mian/mian.wxss */

.main {
    width: 100%;
    height: auto;
    margin: 10rpx auto;
}

.price {
    width: 95%;
    height: 50rpx;
    margin: 0 auto;
    color: red;
    font-weight: 800;
}

.price i {
    font-size: 24rpx;
}

.price text {
    font-size: 42rpx;
}

.price em {
    text-decoration: line-through;
    color: rgb(153, 153, 153);
    font-size: 24rpx;
    font-weight: 600;
    margin-left: 10rpx;
}

.vip {
    width: 95%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    height: 80rpx;
    background-color: #F7F8FC;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.img {
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
}

.vip .center {
    width: 70%;
    font-size: 28rpx;
}

.vip .kaitong {
    width: 23%;
    height: 50rpx;
    background-color: black;
    color: #e3c49e;
    font-size: 28rpx;
    border-radius: 20rpx;
    text-align: center;
    line-height: 50rpx
}

.shopname {
    width: 95%;
    height: auto;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.zhi {
    width: 120rpx;
    padding-left: 15rpx;
    padding-right: 15rpx;
    height: 30rpx;
    font-size: 24rpx;
    color: white;
    background-color: #e3c49e;
    border-radius: 20rpx;
}

.xiao {
    width: 95%;
    height: auto;
    display: flex;
    margin: 40rpx auto;
    margin-bottom: 8rpx;
    color: #999;
}

.xiaoleft {
    width: 40%;
    height: 50rpx;
}

.xiaoright {
    width: 40%;
    height: 50rpx;
}

.box {
    background-color: #F4F4F4;
    height: auto;
    padding-top: 1rpx;
    width: 100%;
}

.xinitem {
    width: 100%;
    height: auto;
    margin: 18rpx auto;
    background-color: white;
    font-size: 30rpx;
}

.itemtop {
    width: 95%;
    margin: 0 auto;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #F4F4F4;
}

.xinitem text {
    color: #999;
}

.itembom {
    width: 95%;
    margin: 0 auto;
    height: 90rpx;
    line-height: 90rpx;
}

.you {
    font-size: 50rpx;
    margin-left: 250rpx;
}

.itembom .you {
    margin-left: 490rpx;
}

.abc {
    width: 100%;
    height: auto;
}